@model AuctionManagement.Auctions

@{
    ViewData["Title"] = Model.AuctionId == 0?  "Add Auction" : "Edit Auction";
}

<div class="jumbotron">
    <h1 class="text-center">@ViewData["Title"]</h1>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddOrEditAuctions" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AuctionId" />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuctionDate" class="control-label"></label>
                <input asp-for="AuctionDate" class="form-control" />
                <span asp-validation-for="AuctionDate" class="text-danger"></span>
            </div>

            <table class="table table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th>
                            Description
                        </th>
                        <th>
                            Auction Date
                        </th>
                        <th>
                            <a asp-action="AddOrEditAuctions">Add New Auction</a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @*@for (int i = 0; i < Model.Rows.Count; i++)
                    {
                        <tr>
                            <td>
                                @Model.Rows[i]["Description"]
                            </td>
                            <td>
                                @Model.Rows[i]["AuctionDate"]
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@Model.Rows[i]["AuctionId"]">Edit</a> |
                                <a asp-action="Details" asp-route-id="@Model.Rows[i]["AuctionId"]">Details</a> |
                                <a asp-action="Delete" asp-route-id="@Model.Rows[i]["AuctionId"]">Delete</a>
                            </td>
                        </tr>
                    }*@
                </tbody>
            </table>


            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
