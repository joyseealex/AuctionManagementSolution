@model AuctionsViewModel

@{
    ViewData["Title"] = Model.AuctionId == 0 ? "Add Auction" : "Edit Auction";
}

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        var auctionId = $("input[type=hidden]").val();

        if (auctionId != 0) {
            $("#frmAuctionDetails #auctionDescription").attr('disabled', 'disabled');
            $("#frmAuctionDetails #auctionDate").attr('disabled', 'disabled');
        }
    });
</script>

<div class="jumbotron">
    <h1 class="text-center">@ViewData["Title"]</h1>
</div>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddOrEditAuctions" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AuctionId" />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input id="auctionDescription" asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuctionDate" class="control-label"></label>
                <input id="auctionDate" asp-for="AuctionDate" class="form-control" />
                <span asp-validation-for="AuctionDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
