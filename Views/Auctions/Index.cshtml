@model List<AuctionsViewModel>

@{
    ViewData["Title"] = "Auction List";
}

<div class="jumbotron">
    <h1 class="text-center">@ViewData["Title"]</h1>
</div>

<table class="table table-bordered">
    <thead class="thead-light">
        <tr>
            <th>
                Description
            </th>
            <th>
                Auction Date
            </th>
            <th>
                Number of Items
            </th>
            <th>
                <a asp-action="AddOrEditAuctions">Add New Auction</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
        <tr>
            <td>
                @Model[i].Description
            </td>
            <td>
                @Model[i].AuctionDate
            </td>
            <td>
                @Model[i].TotalAuctionItems
            </td>
            <td>
                <a asp-action="AddOrEditAuctions" asp-route-id="@Model[i].AuctionId">Edit</a> |
                <a asp-action="ViewAuctionItems" asp-route-id="@Model[i].AuctionId">View Auction Items</a>
            </td>
        </tr>
        }
    </tbody>
</table>
